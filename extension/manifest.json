{
  "name": "Mocket",
  "version": "0.1",
  "manifest_version":2,
  "description": "Save songs to mocket.",
  "page_action": {
    "default_title": "Mocket"
  },
  "background": {
    "scripts": ["build/utils.js","build/background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["build/content.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*"
  ]
}
